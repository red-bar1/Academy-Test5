@model IEnumerable<Piatto>


<table class="table table-dark table-sm">
    <thead>
        <tr>
            
            <th>Nome</th>
            <th>Tipologia</th>
            <th>Prezzo</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.Nome</td>
                <td>@item.Tipologia</td>
                <td>@item.Prezzo $</td>
                
                @{
                    if (User.IsInRole("Ristoratore"))
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                        </td>
                    }
                    else
                    {
                        <td>@Html.ActionLink("Details", "Details", new { id = item.Id }) <input type="checkbox"/> </td>
                    }
                }

            </tr>
        }

    </tbody>
    <tfoot>
        
        <tr>
            <td>New Dish:</td>

            @{ if (User.IsInRole("Ristoratore"))
                {
                    <td><a asp-action="Create">Add</a></td>
;
                }
                else
                {
                    <td>We always work to give you new great italian dishes, stay tuned.</td>
;
                }
            }

        </tr>
    </tfoot>
</table>
